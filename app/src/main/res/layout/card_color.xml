<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/color_card_height"
    android:layout_marginTop="@dimen/color_card_margin_top"
    android:layout_marginBottom="@dimen/color_card_margin_bottom"
    card_view:cardCornerRadius="@dimen/color_card_corner_radius">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/color_card_background">

        <RelativeLayout
            android:id="@+id/card_view_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/color_card_color_height"
            android:padding="@dimen/color_card_content_padding">

            <TextView
                android:id="@+id/color_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_card_title_dark_color"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/color_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_title"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_card_content_dark_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/is_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/md_grey_900"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>

        <!--<ImageButton-->
            <!--android:id="@+id/color_copy"-->
            <!--android:layout_width="@dimen/card_color_action_width"-->
            <!--android:layout_height="@dimen/card_color_action_height"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="?android:selectableItemBackground"-->
            <!--android:src="@drawable/ic_content_copy_black_24dp" />-->

        <ImageButton
            android:id="@+id/primary_color"
            android:layout_width="@dimen/card_color_action_width"
            android:layout_height="@dimen/card_color_action_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/button_primary_color_black_24dp" />

        <ImageButton
            android:id="@+id/primary_dark_color"
            android:layout_width="@dimen/card_color_action_width"
            android:layout_height="@dimen/card_color_action_height"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/primary_color"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/button_primary_dark_color_black_24dp" />

        <ImageButton
            android:id="@+id/accent_color"
            android:layout_width="@dimen/card_color_action_width"
            android:layout_height="@dimen/card_color_action_height"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/primary_dark_color"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/button_accent_color_black_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>