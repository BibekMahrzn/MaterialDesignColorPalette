<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preview_item_height"
    android:padding="@dimen/preview_item_padding">

    <!--<ImageView-->
        <!--android:id="@+id/primary_color_circle"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="@dimen/preview_item_picture_margin_right"-->
        <!--android:background="@drawable/colored_circle" />-->

    <TextView
        android:id="@+id/color_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/preview_item_picture_margin_right"
        android:background="@drawable/colored_circle"
        tools:text="A" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/color_text_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="color" />

        <TextView
            android:id="@+id/color_text_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="color"/>

    </LinearLayout>

</LinearLayout>